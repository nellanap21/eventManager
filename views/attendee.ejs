<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/main.css"> <!-- must be after to override bootstrap-->

        <title>This is the attendee home page</title>
    </head>
    <body>
        <div class="container bg-light">
            <div class="heroSection">
                <div class="row">
                    <h1>Attendee Home Page</h1>
                </div>
            </div>
            <div class="siteInfo">
                <div class="row">
                    <h2>Site Info</h2>
                </div>
                <div class="row">
                    <p>Event Manager Name: <%= siteName %></p>
                    <p>Event Manager Description: <%= siteDescription %></p>
                </div>
            </div>
            <div class="publishedEvents">
                <h2>Upcoming Events</h2>
                <table>
                    <thead>
                        <th>Title</th>
                        <th>Event Date</th>
                    </thead>
                    <tbody>
                        <% publishedEvents.forEach(function(row) { %>
                        <tr>
                            <td><a href="/attendee/book-event/<%= row.event_id %>"><%= row.event_title %></a></td>
                            <td><%= row.event_date %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>


    </body>
</html>